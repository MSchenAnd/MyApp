<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray">
  
	<ListView android:id="@+id/contact_listview" android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:layout_below="@id/contact_search"
	    />
	<com.wuxianedu.wechat.widgt.SideBar android:id="@+id/contact_sidebar" android:layout_width="40dp"
	    android:layout_height="wrap_content" android:layout_alignParentRight="true"
	    android:layout_marginTop="55dp" android:visibility="gone"/>
	
	<TextView android:id="@+id/contact_text" android:layout_width="60dp"
	    android:layout_height="60dp" android:textColor="@color/with"
	    android:background="@drawable/contact_text" android:layout_centerInParent="true"
	    android:textSize="30dp" android:gravity="center"
	    android:visibility="gone"/>
	
</RelativeLayout>
