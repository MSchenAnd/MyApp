<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView android:id="@+id/tallk_time" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:padding="5dp"
        android:text="2:00" android:background="@color/chate_tallk_time"
        android:layout_marginTop="10dp" android:layout_centerHorizontal="true"
        android:textColor="@color/with"/>
    
    <com.wuxianedu.wechat.widgt.RoundImageView android:id="@+id/chat_userimg_me"
        android:layout_width="50dp" android:layout_height="50dp"
        android:src="@drawable/user_ba" android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" android:layout_below="@id/tallk_time"
        android:layout_marginTop="5dp"/>
    
    <TextView android:id="@+id/chat_tallk_item" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/tallk_background"
        android:layout_toLeftOf="@id/chat_userimg_me" android:layout_marginLeft="70dp"
        android:layout_alignTop="@id/chat_userimg_me" android:textSize="15dp"
        android:text="oinjoirngwaoroirwaafwfagrwagawer" android:visibility="gone"
        />
    
    <ImageView android:id="@+id/chat_tallk_imag" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/tallk_background"
        android:layout_toLeftOf="@id/chat_userimg_me" android:layout_marginLeft="70dp"
        android:layout_alignTop="@id/chat_userimg_me" android:visibility="gone"
        android:src="@drawable/chatto_voice_playing"/>
    
    <ImageView android:id="@+id/chat_tallk_voice" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="@drawable/tallk_background"
        android:layout_toLeftOf="@id/chat_userimg_me" android:layout_marginLeft="70dp"
        android:layout_alignTop="@id/chat_userimg_me" android:visibility="gone"
        android:src="@anim/video" />
    <TextView android:id="@+id/voice_time" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="@color/chate_tallk_time"
        android:layout_alignTop="@id/chat_tallk_voice" android:visibility="gone"
        android:layout_alignRight="@id/chat_tallk_voice" android:layout_alignBottom="@id/chat_tallk_voice"
        android:gravity="center" android:layout_marginRight="80dp"/>
    
    
</RelativeLayout>
