<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="normalLayout">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
     <style name="widthLayout">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
	<style name="Title">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">55dp</item>
	    <item name="android:background">@color/title_bg_color</item>
	</style>
	<style name="TitleButton">
	    <item name="android:layout_width">55dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:src">@drawable/left</item>
	</style>
	<style name="TitleText">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/with</item>
	    <item name="android:textSize">20dp</item>
	    <item name="android:layout_centerInParent">true</item>
	</style>
	<style name="login_text_bold">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">20dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">@color/black</item>
	</style>
	<style name="Radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/weixin_textcolor</item>
    </style>
    <style name="me_imageleft_style">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_centerVertical">true</item>
       <item name="android:layout_marginLeft">7dp</item>
    </style>
    <style name="me_imageright_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="me_child">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@color/with</item>
    </style>
    <style name="me_child_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>
    <style name="weixin_text_bold">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">16dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">@color/black</item>
	</style>
	<style name="weixin_lasttime">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/gray</item>
	    
	</style>
	<style name="weixin_autograph">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/gray</item>
	    <item name="android:textSize">14dp</item>
	</style>
	
	<style name="contacts_list">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">60dp</item>
	    <item name="android:textSize">15dp</item>
	    <item name="android:background">@color/with</item>
	    <item name="android:gravity">center_vertical</item> 
	</style>
	<style name="newfriend_manner">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@color/with</item>
	</style>
	
	<!-- 用户详情：地区、个性签名、个人相册 -->
	<style name="userdetails_text">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">50dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_marginLeft">10dp</item>
	</style>
</resources>
